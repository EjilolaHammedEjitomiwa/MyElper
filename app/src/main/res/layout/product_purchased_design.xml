<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/product_purchased_design_image"
        android:layout_width="100dp"
        android:src="@drawable/logo"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/product_purchased_design_price"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/louis_george"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/product_purchased_design_quantity"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:fontFamily="@font/louis_george"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/product_purchased_design_deliveryCharge"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:fontFamily="@font/louis_george"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>


</LinearLayout>