<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/create_pin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create your pin"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/password_bg"
                android:gravity="center"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/dot_1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/icon_dot"
                    android:visibility="invisible"
                    app:tint="@color/colorPrimary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/password_bg"
                android:gravity="center"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/dot_2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/icon_dot"
                    android:visibility="invisible"
                    app:tint="@color/colorPrimary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/password_bg"
                android:gravity="center"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/dot_3"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/icon_dot"
                    android:visibility="invisible"
                    app:tint="@color/colorPrimary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/password_bg"
                android:gravity="center"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/dot_4"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/icon_dot"
                    android:visibility="invisible"
                    app:tint="@color/colorPrimary" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="20dp">

            <TextView
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/d_passworf_bg_round"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:onClick="btnClick"
                android:padding="5dp"
                android:text="1"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/d_passworf_bg_round"
                android:gravity="center"
                android:onClick="btnClick"
                android:padding="5dp"
                android:text="2"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/d_passworf_bg_round"
                android:gravity="center"
                android:onClick="btnClick"
                android:padding="5dp"
                android:text="3"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/btn_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/d_passworf_bg_round"
                android:gravity="center"
                android:onClick="btnClick"
                android:padding="5dp"
                android:text="4"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/btn_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/d_passworf_bg_round"
                android:gravity="center"
                android:onClick="btnClick"
                android:padding="5dp"
                android:text="5"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/btn_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/d_passworf_bg_round"
                android:gravity="center"
                android:onClick="btnClick"
                android:padding="5dp"
                android:text="6"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/btn_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/d_passworf_bg_round"
                android:gravity="center"
                android:onClick="btnClick"
                android:padding="5dp"
                android:text="7"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/btn_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/d_passworf_bg_round"
                android:gravity="center"
                android:onClick="btnClick"
                android:padding="5dp"
                android:text="8"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/btn_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/d_passworf_bg_round"
                android:gravity="center"
                android:onClick="btnClick"
                android:padding="5dp"
                android:text="9"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/d_passworf_bg_round"
                android:gravity="center"
                android:padding="20dp"
                android:text="1"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/btn_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/d_passworf_bg_round"
                android:gravity="center"
                android:onClick="btnClick"
                android:padding="5dp"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/d_passworf_bg_round"
                android:gravity="center"
                android:padding="5dp"
                android:text="X"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_go"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:padding="15dp"
            android:src="@drawable/icon_next_thin"
            app:tint="@color/colorPrimary" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>