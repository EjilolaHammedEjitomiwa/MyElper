<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <ImageView
        android:id="@+id/notification_design_dot"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="20dp"
        android:src="@drawable/icon_dot"
        android:tint="@color/colorPrimary" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/notification_design_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NEW ORDER"
                android:fontFamily="@font/louis_george"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/notification_design_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/louis_george"
                android:maxLines="2"
                android:text="We have contacted your seller to start the delivery process"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/notification_design_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/louis_george"
                android:layout_marginTop="5dp"
                android:alpha="0.5"
                android:text="Just now"
                android:textColor="@color/black" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>